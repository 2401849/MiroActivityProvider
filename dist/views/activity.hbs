<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Activity Details</title>
    <script>
      function registerActivity(event) { event.preventDefault();
      event.stopPropagation(); const IuserId = "{{IuserId}}"; const activityID =
      "{{activityID}}"; const miroUserId =
      document.getElementById("miroUserId").value; const requestBody = {
      IuserId, activityID, miroUserId }; const url = window.location.protocol +
      "//" + window.location.host + "/activity/interface"; fetch(url, { method:
      'POST', headers: { 'Content-Type': 'application/json' }, body:
      JSON.stringify(requestBody), mode: 'cors' }) .then((res) => { if (res.ok)
      { alert('Verifica o teu email') } else { console.error(res.statusText); }
      }) .catch(error => console.error(error)); return false; }
    </script>
  </head>
  <body>
    <h1>Welcome {{IuserId}}</h1>
    <h1>Activity Details for activity: {{activityID}}</h1>
    <p>Instructions:</p>
    <form>
      <label for="miroUserId">User ID:</label><br />
      <input
        type="text"
        id="miroUserId"
        name="userId"
        placeholder="Your Miro User ID"
      /><br /><br />
    </form>
    <a href="#" onclick="return registerActivity(event)">Register</a>
  </body>
</html>